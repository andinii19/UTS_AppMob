<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivityKP1">

    <View
        android:id="@+id/latar11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/latar1"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/nktpa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Nilai Seminar KP"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="150dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/latarabu"
        tools:context="recyelerview.mainRecyclerview">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recylerView"
            android:layout_marginTop="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/nav"
        >

        <ImageButton
            android:id="@+id/logohome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="48dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="5dp"
            android:contentDescription="tekan jika ingin ke Home"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/logotas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tas"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="5dp"
            android:contentDescription="tekan jika ingin ke Input nilai seminar KP"
            />

        <ImageButton
            android:id="@+id/logotoga"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/toga"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="2dp"
            android:contentDescription="tekan jika ingin ke Input nilai seminar TA"
            />

        <ImageButton
            android:id="@+id/logokeluar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/keluar"
            android:backgroundTint="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:contentDescription="tekan jika ingin Keluar"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>