<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivityKP2">


    <View
        android:id="@+id/latar11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/latar1"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/nktpa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Nilai Seminar KP"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="150dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/latarabu"
        tools:context="recyelerview.mainRecyclerview">

        <TextView
            android:id="@+id/judulKP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERANCANGAN APLIKASI ABSENSI GURU DAN PEGAWAI\nPADA MADRASAH ALLIYAH DARUSSALAM PANGKALPINANG BERBASIS ANDROID"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/fotoKP"
            android:src="@drawable/andin"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/judulKP"/>

        <TextView
            android:id="@+id/atributKP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama  :\n\nNIM     :"
            android:textSize="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toRightOf="@id/fotoKP"
            app:layout_constraintTop_toBottomOf="@id/judulKP"
            />

        <TextView
            android:id="@+id/namaKP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Restu Kharrisa Andini"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toEndOf="@+id/atributKP"
            app:layout_constraintTop_toBottomOf="@id/judulKP" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nimKP"
            android:text="12250124591"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toEndOf="@+id/atributKP"
            app:layout_constraintTop_toBottomOf="@id/namaKP"
            />

        <Button
            android:id="@+id/simpanKP"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="simpan"
            android:backgroundTint="@color/hijauUIN"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/nimKP"/>

        <Button
            android:id="@+id/kembaliKP"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="kembali"
            android:backgroundTint="@color/merah"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintRight_toLeftOf="@+id/simpanKP"
            app:layout_constraintTop_toBottomOf="@id/nimKP"/>

        <TextView
            android:id="@+id/sikap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIKAP (20%)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fotoKP"
            />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aspek penilaian :\n      - Penampilan/Etika\n      - Cara menjawab pertanyaan\n      - Kecakapan dalam menggunakan alat bantu"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sikap"/>

        <EditText
            android:id="@+id/nilaisikap"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:hint="isi nilai"
            android:textStyle="bold"
            android:textSize="13dp"
            android:maxLength="3"
            android:textColor="@color/black"
            android:inputType="text"
            android:textAlignment="center"
            android:background="@drawable/bttn2"
            android:layout_marginTop="28dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/desc1"
            app:layout_constraintTop_toBottomOf="@id/sikap"/>

        <TextView
            android:id="@+id/penguasaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENGUASAAN MATERI (40%)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc1"
            />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aspek penilaian :\n      - Bahan presentasi\n      - Ketepatan waktu\n      - Pemahaman terhadap materi\n      - Pemahaman terhadap materi pendukung"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/penguasaan"/>

        <EditText
            android:id="@+id/nilaipenguasaan"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:hint="isi nilai"
            android:textStyle="bold"
            android:textSize="13dp"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@drawable/bttn2"
            android:inputType="text"
            android:layout_marginTop="44dp"
            android:layout_marginStart="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/desc2"
            app:layout_constraintTop_toBottomOf="@id/penguasaan"/>


        <TextView
            android:id="@+id/isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISI LAPORAN (40%)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc2"
            />

        <TextView
            android:id="@+id/desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aspek penilaian :\n      - Format dan kualitas laporan"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/isi"/>

        <EditText
            android:id="@+id/nilaiisi"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:hint="isi nilai"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:inputType="text"
            android:maxLength="3"
            android:background="@drawable/bttn2"
            android:layout_marginTop="-3dp"
            android:layout_marginStart="100dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/desc3"
            app:layout_constraintTop_toBottomOf="@id/isi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:layout_marginBottom="200dp">

            <TextView
                android:id="@+id/totalnilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL NILAI : "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/isitotalnilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/hijauUIN"
                android:textAlignment="center"
                android:background="@drawable/latarabu"
                android:inputType="none"
                />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>