<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivityLOGIN">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logoshdw"
        android:layout_marginTop="200dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UIN SUSKA RIAU"
        android:textStyle="italic"
        android:textSize="22sp"
        android:layout_marginEnd="108dp"
        app:layout_constraintTop_toBottomOf="@+id/nkpta"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/nkpta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penginputan\nNilai Seminar (NKPTA)"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/hijau"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please sign in to continue"
            android:textStyle="normal"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/hijauUIN"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="90dp"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/hijauUIN"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageButton
            android:id="@+id/showPW"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/show"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"/>

        <ImageButton
            android:id="@+id/hidePW"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/hide"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bttnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/hijauUIN"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@+id/pw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>